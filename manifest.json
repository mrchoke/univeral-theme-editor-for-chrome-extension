{
  "manifest_version": 3,
  "name": "Universal Dynamic Theme Editor",
  "version": "1.0",
  "description": "Tools for real-time CSS customization and exporting the results for practical use.",
  "author": "supphachoke.sun@nectec.or.th",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/globals.js",
        "js/ui-components.js",
        "js/element-handlers.js",
        "js/style-applier.js",
        "js/event-listeners.js",
        "js/toolbox-populators.js",
        "js/options-panel.js",
        "js/main.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}